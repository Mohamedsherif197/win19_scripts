$downloadUrl = 'https://winscp.net/download/WinSCP-6.1.2-Setup.exe'
$downloadPath = Join-Path $env:USERPROFILE 'Downloads\WinSCP-Setup.exe'

Invoke-WebRequest -Uri $downloadUrl -OutFile $downloadPath

$installArgs = '/SP- /VERYSILENT /SUPPRESSMSGBOXES /NORESTART'
Start-Process -FilePath $downloadPath -ArgumentList $installArgs -Wait
